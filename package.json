{
    "name": "inkpilot",
    "displayName": "inkpilot â€” AI-Powered SVG Editor",
    "description": "Create and edit SVGs with AI via MCP. Live canvas preview with Fabric.js, design prompts, and 13 tools for logos, icons, badges, and more.",
    "version": "1.0.1",
    "publisher": "Redmond-Enterprises-LLC",
    "license": "MIT",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/jamesmichaelredmond/inkpilot"
    },
    "homepage": "https://github.com/jamesmichaelredmond/inkpilot#readme",
    "bugs": {
        "url": "https://github.com/jamesmichaelredmond/inkpilot/issues"
    },
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Visualization",
        "Machine Learning",
        "Other"
    ],
    "keywords": [
        "svg",
        "mcp",
        "ai",
        "design",
        "vector",
        "graphics",
        "editor",
        "fabric",
        "claude",
        "model-context-protocol"
    ],
    "galleryBanner": {
        "color": "#2563eb",
        "theme": "dark"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "inkpilot.openEditor",
                "title": "inkpilot: Open SVG Editor"
            },
            {
                "command": "inkpilot.startServer",
                "title": "inkpilot: Start MCP Server"
            },
            {
                "command": "inkpilot.saveProject",
                "title": "inkpilot: Save Project"
            },
            {
                "command": "inkpilot.saveProjectAs",
                "title": "inkpilot: Save Project As..."
            },
            {
                "command": "inkpilot.openProject",
                "title": "inkpilot: Open Project"
            },
            {
                "command": "inkpilot.exportSvg",
                "title": "inkpilot: Export SVG"
            }
        ],
        "keybindings": [
            {
                "command": "inkpilot.saveProject",
                "key": "ctrl+s",
                "mac": "cmd+s",
                "when": "activeWebviewPanelId == 'inkpilot.editor' || activeCustomEditorId == 'inkpilot.svgEditor'"
            },
            {
                "command": "inkpilot.saveProjectAs",
                "key": "ctrl+shift+s",
                "mac": "cmd+shift+s",
                "when": "activeWebviewPanelId == 'inkpilot.editor' || activeCustomEditorId == 'inkpilot.svgEditor'"
            },
            {
                "command": "inkpilot.openProject",
                "key": "ctrl+o",
                "mac": "cmd+o",
                "when": "activeWebviewPanelId == 'inkpilot.editor' || activeCustomEditorId == 'inkpilot.svgEditor'"
            },
            {
                "command": "inkpilot.exportSvg",
                "key": "ctrl+e",
                "mac": "cmd+e",
                "when": "activeWebviewPanelId == 'inkpilot.editor' || activeCustomEditorId == 'inkpilot.svgEditor'"
            }
        ],
        "configuration": {
            "title": "inkpilot",
            "properties": {
                "inkpilot.port": {
                    "type": "number",
                    "default": 7100,
                    "description": "Port for the MCP SSE server"
                }
            }
        },
        "customEditors": [
            {
                "viewType": "inkpilot.svgEditor",
                "displayName": "inkpilot SVG Editor",
                "selector": [
                    {
                        "filenamePattern": "*.inkp"
                    }
                ],
                "priority": "default"
            }
        ],
        "languages": [
            {
                "id": "inkpilot",
                "extensions": [".inkp"],
                "icon": {
                    "light": "./icons/inkp-file-light.svg",
                    "dark": "./icons/inkp-file-dark.svg"
                }
            }
        ],
        "mcpServerDefinitionProviders": [
            {
                "id": "inkpilot.mcpServer",
                "label": "inkpilot SVG Editor"
            }
        ]
    },
    "scripts": {
        "build": "node esbuild.config.mjs",
        "watch": "node esbuild.config.mjs --watch",
        "package": "vsce package",
        "lint": "eslint src/"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.11.0",
        "express": "^4.21.0",
        "linkedom": "^0.16.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.0",
        "@types/vscode": "^1.109.0",
        "esbuild": "^0.24.0",
        "fabric": "^6.5.0",
        "typescript": "^5.5.0"
    },
    "optionalDependencies": {
        "@resvg/resvg-js": "^2.6.0"
    }
}
